{% extends 'base.html.twig' %}

{% block title %}Confirmation{% endblock %}
{% block flash %}
{% endblock %}
{% block body %}

    <body class="bg-login" style="background: url('{{ asset('img/bg-assurance.jpg') }}');background-size: cover">

    <div class="container" style=" padding-left: 40rem;">

        <div class="card card-login mx-auto mt-5" style="background-color: rgba(255,255,255,0.7);">
            <div class="card-header text-center"><h6>Connexion</h6></div>
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <img class="mb-2" src="{{ asset('img/talan-academy.png') }}" width="200px" height="120px">
                </div>
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-danger">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                <a href="{{ path('app_login') }}" class="btn btn-primary mt-3">Connexion</a>
            </div>
        </div>
    </div>
    </body>
    {% block footer %}
    {% endblock %}
{% endblock %}