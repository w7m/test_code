{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
{% block flash %}
{% endblock %}
    <body class="bg-login" style="background: url('{{ asset('img/bg-assurance.jpg') }}');background-size: cover">

    <div class="container" style=" padding-left: 40rem;">
        <div class="card card-login mx-auto mt-5" style="background-color: rgba(255,255,255,0.7);">
            <div class="card-header text-center"><h6>Connexion</h6></div>
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <img class="mb-3" src="{{ asset('img/talan-academy.png') }}" width="200px" height="120px">
                </div>

                <form method="post">
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="alert alert-danger">
                            {{ flashMessage }}
                        </div>
                    {% else %}
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                    {% endfor %}
                    <div class="form-group">
                    <label for="inputEmail" class="sr-only">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                    </div>
                    <div class="form-group">
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <br>
                    <div class="text-center">
                    <button class="btn btn-lg btn-primary mb-2" type="submit">
                        Se connecter
                    </button>
                    </div>
                </form>
                <div class="text-center">
                    <a class="d-block small" href="{{ path('app_resetPassword') }}">Mot de passe oubli√©?</a>
                </div>
            </div>
        </div>
    </div>
{% block footer %}
{% endblock %}
{% endblock %}
