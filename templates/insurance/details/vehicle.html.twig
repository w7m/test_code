<div class="card">
    <h4 class="card-header"> <i class="fas fa-car"></i> Véhicule concernée</h4>
    <div class="d-flex card-body">
        <div class="col-6">
            <p><span class="font-weight-bold text-success">Type : </span>{{ folder.vehicle.type }}
            </p>
            <p>
                <span class="font-weight-bold text-success">N° d'immatriculation : </span>{{ folder.vehicle.registrationNumber }}
            </p>
            <p>
                <span class="font-weight-bold text-success">Puissance fiscale : </span>{{ folder.vehicle.horsePower }}
            </p>
        </div>
        <div class="col-6">
            <p>
                <span class="font-weight-bold text-success">Date de 1ère mise en circulation : </span>{{ folder.vehicle.dateOfRegistration|date("d/m/Y") }}
            </p>
            <p>
            <span class="font-weight-bold text-success">Nombre de portes : </span>{{ folder.vehicle.doorsNumber }}
            </p>
            <p>
                <span class="font-weight-bold text-success">Couleur : </span>{{ folder.vehicle.color }}
            </p>
        </div>
    </div>
</div>